{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["esnext", "es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "exclude": ["node_modules", "build"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
